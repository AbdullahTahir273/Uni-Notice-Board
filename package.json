{
  "name": "uni-notice-board",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint:css": "stylelint \"styles/**/*.css\" --allow-empty-input",
    "lint:html": "htmlhint \"src/**/*.html\"",
    "lint": "npm run lint:html && npm run lint:css",
    "build": "parcel build src/*.html --dist-dir dist"
  },
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "parcel": "^2.10.0"
  }
}
